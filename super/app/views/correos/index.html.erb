<h1>Listing correos</h1>

<table>
  <thead>
    <tr>
      <th>Remitente</th>
      <th>Mensaje</th>
      <th>Departamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @correos.each do |correo| %>
      <tr>
        <td><%= correo.remitente %></td>
        <td><%= correo.mensaje %></td>
        <td><%= correo.departamento %></td>
        <td><%= link_to 'Show', correo %></td>
        <td><%= link_to 'Edit', edit_correo_path(correo) %></td>
        <td><%= link_to 'Destroy', correo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Correo', new_correo_path %>
